# Gemini API Key (for Phase 1 frontend - AI SDK v6)
GOOGLE_GENERATIVE_AI_API_KEY=AI...

# Gemini API Key (for ADK backend - uses different env var name)
GOOGLE_API_KEY=AI...

# ADK Configuration - Use Google AI Studio (not Vertex AI)
GOOGLE_GENAI_USE_VERTEXAI=0

# ADK Session Persistence (SSE mode only - BIDI uses in-memory)
# SQLite database path for session storage
ADK_SESSION_DB_PATH=./sessions.db

# Logging Configuration
# Controls console log verbosity (file logs always use DEBUG)
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Server Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# API Key Authentication (for /stream and /live endpoints)
# Change this in production - default value is for development only
API_KEY=dev-key-12345
# Frontend API key (must match API_KEY for authenticated requests)
NEXT_PUBLIC_API_KEY=dev-key-12345

# ADK Backend URL
NEXT_PUBLIC_ADK_BACKEND_URL=http://localhost:8000

# Debug flags
NEXT_PUBLIC_DEBUG_CHAT_OPTIONS=true

# Debug chunk flags
CHUNK_LOGGER_ENABLED=true
CHUNK_LOGGER_SESSION_ID=test
NEXT_PUBLIC_CHUNK_LOGGER_ENABLED=true
NEXT_PUBLIC_CHUNK_LOGGER_SESSION_ID=test

E2E_CHUNK_PLAYER_MODE=false

OPENWEATHERMAP_API_KEY=...

E2E_REFRESH_FIXTURE=false

# ollama (local gpu pc) via Tailscale
OLLAMA_API_BASE="http://x.x.x.x:11434"